<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login02"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.login.Login">


    <View
        android:id="@+id/color40"
        android:layout_width="match_parent"
        android:layout_height="400dip"
        android:alpha="	"
        android:background="#92BCBCBC"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="328dp"
        android:layout_height="58dp"
        android:layout_gravity="start"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="216dp"
        android:background="#99E6E0E0"
        android:enabled="false"
        android:hint="u"
        android:onClick="Login"
        android:text="@string/action_sign_in"
        android:textColor="#FA121111"
        android:textColorLink="#33FBFAFA"
        android:textSize="18sp"
        android:textStyle="@string/LearnMoreBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Sign In" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:layout_editor_absoluteX="206dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="331dp"
        android:layout_height="58dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="277dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="329dp"
        android:layout_height="57dp"
        android:drawableLeft="@drawable/ic_baseline_perm_identity_24"
        android:ems="10"
        android:filterTouchesWhenObscured="true"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:text="Don't have an Account?"
        android:textColor="#1E1E1E"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="481dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#99E6E0E0"
        android:text="Sign Up"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="481dp" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="168dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Forgot Password?"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="427dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="292dp"
        android:layout_height="45dp"
        android:text="Already Have an Account?"
        android:textColorHint="#100101"
        android:textColorLink="#130101"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="44dp" />


